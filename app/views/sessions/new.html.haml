%h1 Login

= form_tag login_create_path do

  = label :session, :user_id, 'User-ID'
  = text_field :session, 'user_id', :id => 'login_user'

  = label :session, :email, 'Email'
  = text_field :session, 'email', :id => 'login_email'

  = submit_tag 'Login to my account', :id => 'login_submit'

= link_to 'Signup for an account', new_user_path, :id => 'signup'
